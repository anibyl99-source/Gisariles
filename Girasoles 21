  <script>
    // add trails to each shooting star
    document.querySelectorAll('.shooting-star').forEach(el => {
      const trail = el.querySelector('.trail');
      if(!trail) return;
      trail.style.width = (90 + Math.random()*140) + 'px';
      trail.style.opacity = 0.9;
    });
  </script>
